# Dockerfile for Chatbot with Function Calling
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
COPY requirements_chatbot.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements_chatbot.txt && \
    pip install --no-cache-dir fastapi uvicorn requests

# Copy application code
COPY chatbot_cloud.py .
COPY agents/ ./agents/
COPY tools/ ./tools/
COPY config/ ./config/

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV PORT=8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:${PORT}/health')"

# Run chatbot
CMD uvicorn chatbot_cloud:app --host 0.0.0.0 --port ${PORT}

